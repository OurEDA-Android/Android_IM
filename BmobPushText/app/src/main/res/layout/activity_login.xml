<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_name"
        android:background="@drawable/edit_shap"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:hint="请输入用户名："
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/black"
        android:id="@+id/view" />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_password"
        android:background="@drawable/edit_shap"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:hint="请输入密码："
        android:layout_alignTop="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_marginTop="38dp" />
    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/rectangle"
        android:text="登陆"
        android:textSize="18sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_logup"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name" />
    <Button
        android:id="@+id/btn_logup"
        android:background="@drawable/rectangle"
        android:text="注册"
        android:textSize="18sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_alignRight="@+id/et_name"
        android:layout_alignEnd="@+id/et_name"
        android:layout_marginTop="60dp" />

    <ImageView
        android:src="@drawable/logoquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>